<h2>Войти</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), label_errors: true) do |f| %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", label: 'Email', placeholder: 'example@domain.com' %>
  <%= f.password_field :password, autocomplete: "off", label: 'Пароль' %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, label: 'Запомнить меня'%>
  <% end -%>

  <%= f.primary "Войти"%>
<% end %>

<%= render "devise/shared/links" %>
